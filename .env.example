# League of Legends API Client Environment Variables
# Copy this file to .env and add your actual API key

# Riot Games API Key (required)
# Get your API key from: https://developer.riotgames.com/
RIOT_API_KEY=your_riot_api_key_here

# Monitoring Configuration
# How often to check for active game (in seconds)
GAME_CHECK_INTERVAL=1

# How often to refresh account data when not in game (in seconds) 
ACCOUNT_REFRESH_INTERVAL=60

# How often to update overlay files during active game (in seconds)
OVERLAY_UPDATE_INTERVAL=5

# Rate limiting for API requests (in seconds)
RATE_LIMIT_DELAY=0.1

# Session timeout for HTTP requests (in seconds)
SESSION_TIMEOUT=30

# Validation limits
MAX_GAME_NAME_LENGTH=16
MAX_TAG_LINE_LENGTH=5
MIN_API_KEY_LENGTH=20

# Live Client API Configuration
LIVE_CLIENT_BASE_URL=https://127.0.0.1:2999/liveclientdata

# Match history settings
DEFAULT_MATCH_COUNT=20

# Current season for display
CURRENT_SEASON=2025
